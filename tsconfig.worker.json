{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,                 // <— overrides root noEmit
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",            // <— emit CJS for node
    "moduleResolution": "Node",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",                // emits to dist/worker/...
    "rootDir": "."
  },
  "include": ["worker/**/*.ts"]
}
